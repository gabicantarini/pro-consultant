@page "/patients" 

@inherits IndexPage

<MudText Typo="Typo.h3">Pacientes</MudText>

<MudButton Variant="Variant.Filled"
           StartIcon="@Icons.Material.Filled.Add"
           Color="Color.Info"
           Size="Size.Large"
           Href="/pacientes/create"
           Class="mt-md-4 mb-4">New Patient
</MudButton>

<MudDataGrid Items="@Patients" Filterable="false" SortMode="@SortMode.Single" Groupable="false">
    <Columns>
        <PropertyColumn Property="x=>x.Name" />
        <PropertyColumn Property="x=>x.Document" />
        <PropertyColumn Property="x=>x.Mail" />
        <PropertyColumn Property="x=>x.Mobile" />
        <PropertyColumn Property="x=>x.BirthDate" Format="dd/MM/yyyy" />
        <TemplateColumn>
            <CellTemplate>
                <MudStack Row>
                    <MudFab Size="Size.Small"
                            Label="Editar"
                            hidden="@HideButtons"
                            @onclick="@(()=> GoToUpdate(context.Item.Id))"
                            StartIcon="@Icons.Material.Filled.Edit"
                            Color="Color.Success" />

                    <MudFab Size="Size.Small"
                            Label="Excluir"
                            hidden="@HideButtons"
                            @onclick="@(()=> DeletePatient(context.Item))"
                            StartIcon="@Icons.Material.Filled.Delete"
                            Color="Color.Error" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>